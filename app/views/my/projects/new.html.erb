<% provide(:title, 'my new project') %>
<h1>my new project</h1>
<%= form_for [:my, @project] do |f| %>
  <div class = "field">
    <%= f.label :title, "Project Name"  %>
    <%= f.text_field :title %>
  </div> <!-- .field -->
  <div class = "field">
    <%= f.label :teaser  %>
    <%= f.text_field :teaser %>
  </div> <!-- .field -->
  <div class = "field">
    <%= f.label :description  %>
    <%= f.text_field :description %>
  </div> <!-- .field -->
  <div class = "field">
    <%= f.label :goal  %>
    <%= f.number_field :goal %>
  </div> <!-- .field -->
  <div class="actions">
    <%= f.submit "Publish Project" %>
  </div> <!-- .action -->
<% end %> <!-- form -->

